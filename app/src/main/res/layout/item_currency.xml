<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_margin="@dimen/small_space_8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/iv_currency"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_currency_code"
                style="@style/currencyTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_space_8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_currency_name"
                app:layout_constraintStart_toEndOf="@+id/iv_currency"
                app:layout_constraintTop_toTopOf="@+id/tv_currency_name"
                tools:text="USD" />

            <TextView
                android:id="@+id/tv_currency_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Американский доллар"
                style="@style/currencyTextStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_currency_code"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_currency_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="100"
                style="@style/currencyTextStyle"
                app:layout_constraintBottom_toBottomOf="@+id/tv_current_course"
                app:layout_constraintStart_toStartOf="@+id/tv_currency_code"
                app:layout_constraintTop_toTopOf="@+id/tv_current_course" />

            <TextView
                android:id="@+id/tv_current_course"
                style="@style/currencyTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_currency_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_currency_name"
                tools:text="Текущий курс 74 " />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>